<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:type="linear"
                android:endColor="#255CC3"
                android:startColor="#9128B6"
                android:angle="90.0" />
            <corners
                android:radius="999dp" />
            <padding
                android:left="20dip"
                android:right="20dip"
                android:top="7dip"
                android:bottom="7dip"/>
        </shape>
    </item>
    <item>
        <shape >
            <stroke
                android:color="#9C27B0"
                android:width="5dp"/>
            <corners
                android:radius="999dp"/>
        </shape>
    </item>
</selector> <!-- #4913A6 #9d46ff -->